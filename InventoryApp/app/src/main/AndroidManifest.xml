<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miymayster.olya.inventoryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProductsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProductActivity"
            android:parentActivityName=".ProductsActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProductsActivity" />
        </activity>
        <provider
            android:authorities="com.miymayster.olya.inventoryapp"
            android:name=".data.ProductProvider"
            android:exported="false"/>
    </application>

</manifest>